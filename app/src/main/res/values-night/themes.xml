<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light Mode Theme -->
    <style name="Theme.FinanceManagement" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Global Background Color -->
        <item name="android:windowBackground">@color/dark_bg</item>

        <!-- Text Colors -->
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Base Button Style -->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/primary_light</item>
    </style>

    <!-- Secondary Button -->
    <style name="SecButton" parent="Button">
        <item name="android:backgroundTint">@color/secondary</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/secondary_light</item>
    </style>

    <!-- Positive Button -->
    <style name="PosButton" parent="Button">
        <item name="android:backgroundTint">@color/positive</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/positive_light</item>
    </style>

    <!-- Negative Button -->
    <style name="NegButton" parent="Button">
        <item name="android:backgroundTint">@color/negative</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/negative_light</item>
    </style>

    <style name="Footbar">
        <item name="android:background">@drawable/footbar_dark</item>
    </style>
</resources>