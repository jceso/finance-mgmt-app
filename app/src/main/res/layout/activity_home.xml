<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <include layout="@layout/header" />

    <!-- Si prevedono perdite maggiori rispetto al mese scorso? -->
    <!-- OPPURE  Si prevede di riuscire a mantenre il risparmio (%20%)? -->
    <!-- OPPURE  Si ha ancora il risparmio/si ha ancora nelle entrate fisse o sei in perdita? -->


    <!-- CASH -->
    <TextView
        android:id="@+id/cash_money"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="50dp"
        android:autoSizeMaxTextSize="45sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/rounded_cash"
        android:drawablePadding="7dp"
        android:fontFamily="@font/cs_boline_edited"
        android:gravity="center_vertical"
        android:paddingStart="35dp"
        android:paddingTop="3dp"
        android:paddingEnd="8dp"
        android:text="@string/amount_money"
        android:textColor="@color/grey_dark"
        app:drawableStartCompat="@drawable/ic_cash"
        app:drawableTint="@color/grey_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/summary"
        app:layout_constraintTop_toBottomOf="@+id/card_money" />

    <!-- CARD -->
    <TextView
        android:id="@+id/card_money"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="10dp"
        android:autoSizeMaxTextSize="60sp"
        android:autoSizeMinTextSize="20sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/rounded_card"
        android:drawablePadding="7dp"
        android:fontFamily="@font/cs_boline_edited"
        android:gravity="center_vertical"
        android:paddingStart="35dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:text="@string/amount_money"
        android:textColor="@color/dark_bg"
        app:drawableStartCompat="@drawable/ic_credit_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/summary"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/summary"
        android:layout_width="145dp"
        android:layout_height="170dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/pig_mood_sad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pig_sad_original" />

    <!-- Rispetto al solito hai speso di piÃ¹ in una categoria -->
    <TextView
        android:id="@+id/info_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_grey"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:text="There are no news yet"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic"
        app:drawableStartCompat="@drawable/ic_info"
        app:drawableTint="@color/grey_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary" />

    <!-- Schiacciando sul carousel va alla pagina relativa ai grafici -->
    <!-- Prima slide - Torta delle categorie preferite -->
    <!-- Seconda slide - Torrette divise per tutte le categorie -->
    <!-- Terza slide - Grafico delle spese rispetto al mese/anno scorso (multiple lines chart) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="8dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_light"
        app:layout_constraintTop_toBottomOf="@+id/info_news"
        app:layout_constraintBottom_toTopOf="@+id/monthly_inc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/circle_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ci_drawable="@drawable/bg_indicator" />

    </LinearLayout>


    <!-- Soldi mensili di Entrate -->
    <LinearLayout
        android:id="@+id/monthly_inc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_positive"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout">

        <TextView
            android:id="@+id/loan_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15dp"
            android:drawableStart="@drawable/category_handshake"
            android:drawablePadding="10dp"
            android:drawableTint="@color/secondary_light"
            android:text="Prestito"
            android:textColor="@color/secondary_light"
            android:textStyle="bold"
            android:background="@drawable/positive_elmt"
            android:layout_weight="3" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/salary_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15dp"
            android:drawableStart="@drawable/category_job"
            android:drawablePadding="10dp"
            android:drawableTint="@color/secondary_light"
            android:text="Stipendio"
            android:textColor="@color/secondary_light"
            android:textStyle="bold"
            android:background="@drawable/positive_elmt"
            android:layout_weight="11" />
    </LinearLayout>

    <!--
    <TextView
        android:id="@+id/monthly_inc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp"
        android:background="@color/primary"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:text="Monthly Income"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="15dp" />
        -->


    <LinearLayout
        android:id="@+id/linearLayout"
        style="@style/Footbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/income"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_income"
            android:fontFamily="@font/insanibu"
            android:text="Entrate"
            android:textSize="35dp" />

        <Space
            android:layout_width="4dp"
            android:layout_height="match_parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/expenses"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_expense"
            android:fontFamily="@font/insanibu"
            android:text="Uscite"
            android:textSize="35dp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>