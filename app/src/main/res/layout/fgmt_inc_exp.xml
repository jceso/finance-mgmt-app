<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp">

    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:padding="15dp"
        android:autofillHints="12.34"
        android:hint="Amount"
        android:textColorHint="@color/grey_dark"
        android:textSize="30sp"
        android:textColor="@color/dark_bg"
        android:fontFamily="@font/be_bold"
        android:inputType="numberDecimal"
        android:maxLength="8"
        android:background="@drawable/rounded_border" />

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/amount"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:padding="15dp"
        android:textSize="30sp"
        android:fontFamily="@font/typo_hoop"
        style="@style/PrimElement" />

    <EditText
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/category_spinner"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:padding="15dp"
        android:autofillHints="Lorem ipsum"
        android:gravity="start"
        android:hint="Note"
        android:textColorHint="@color/grey_dark"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="@color/dark_bg"
        android:fontFamily="@font/be_bold"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="100"
        android:background="@drawable/rounded_border" />

    <LinearLayout
        android:id="@+id/date_timeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/note"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:drawableLeft="@drawable/date"
            android:text="Date"
            android:textSize="25sp"
            android:fontFamily="@font/be_bold"
            android:gravity="center|center_vertical"
            style="@style/Button"
            android:layout_weight="1"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:drawableEnd="@drawable/time"
            android:text="Time"
            android:textSize="25sp"
            android:fontFamily="@font/be_bold"
            android:gravity="center|center_vertical"
            style="@style/SecButton"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="90dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded_grey"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/inc_exp"
        app:layout_constraintTop_toBottomOf="@id/date_timeLayout"
        tools:layout_editor_absoluteX="106dp">

        <TextView
            android:id="@+id/repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/be_bold"
            android:text="Repeated:"
            android:textColor="@color/dark_bg"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/be_bold"
                android:text="No"
                android:textColor="@color/dark_bg"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/be_bold"
                android:text="Every week"
                android:textColor="@color/dark_bg"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/be_bold"
                android:text="Every month"
                android:textColor="@color/dark_bg"
                android:textSize="18sp" />
        </RadioGroup>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inc_exp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/income_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:text="Save Income"
            android:textSize="28sp"
            android:fontFamily="@font/insanibu"
            style="@style/PosButton" />

        <Button
            android:id="@+id/expense_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:text="Save Expense"
            android:textSize="28sp"
            android:fontFamily="@font/insanibu"
            style="@style/NegButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>