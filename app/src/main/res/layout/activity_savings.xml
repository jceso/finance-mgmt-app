<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Savings">

    <include layout="@layout/header" /><include layout="@layout/header" />

    <LinearLayout
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_positive">

        <ImageView
            android:id="@+id/pig"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:src="@drawable/pig_happy" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/cs_boline_edited"
                android:text="Amount"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/text_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/amount"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="25dp"
                android:text="of your monthly income"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/perc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text_perc"
                android:layout_below="@+id/text_amount"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/cs_boline_edited"
                android:text="Perc"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/text_perc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="35dp"
                android:layout_marginBottom="20dp"
                android:text="of your monthly income"
                android:textSize="12sp" />

        </RelativeLayout>
    </LinearLayout>

    <!--
    YOUR SAVINGS SHOULD BE tot euro
    BECAUSE OF YOUR FIXED INCOME tot euro
    -->

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/rounded_grey"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/summary"
        tools:layout_editor_absoluteX="40dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your savings should be ..."
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Because your fixed income is ..."
            android:textSize="18dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/info"
        app:layout_constraintBottom_toTopOf="@id/change"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="25dp"
        android:paddingVertical="15dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/rounded_sec" />

    <Button
        android:id="@+id/change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="50dp"
        android:padding="15dp"
        android:text="Change percentage"
        android:fontFamily="@font/hornbill_black"
        android:textSize="20sp"
        style="@style/Button" />

</androidx.constraintlayout.widget.ConstraintLayout>